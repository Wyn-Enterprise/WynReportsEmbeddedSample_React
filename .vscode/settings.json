// Place your settings in this file to overwrite default and user settings.
{
	"csscomb.preset": "csscomb.json",

	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,

	"files.insertFinalNewline": true,
	"files.exclude": {
		".git/": true,
		"node_modules/": true,
		"dist/": true,
		"lib/": true,
		"static/": true,
		"**/.DS_Store": true
	},

	"search.exclude": {
		".git/": true,
		"node_modules/": true,
		"dist/": true
	},

	"eslint.options": {
		"configFile": ".eslintrc.js",
		"exyensions": "--ext js",
	},
	"javascript.validate.enable": false,
	"cSpell.words": [
		"grapecity",
		"pluginassets",
		"stroustrup",
		"linebreak",
		"plusplus",
		"builtins"
	],
	"eslint.validate": [
		"javascript"
	],
}
